@model EFUnitOfWork.Models.BookDTO

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">
        书籍上传
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-lg-3">
                    @Html.HiddenFor(model => model.ID, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-9">
                    <input type="file" name="uploadFile" class="file" id="uploadFile" data-show-preview="false" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-8"></div>
                <div class="col-lg-3">
                    @Html.ActionLink("首页", "Index", null, new { @class = "btn btn-default" })
                    <button class="btn btn-success" id="btnSubmit" type="button">
                        上传
                    </button>
                </div>
            </div>
        </div>
        <div class="modal js-loading-bar">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="progress progress-striped">
                            <div class="progress-bar progress-bar-success" role="progressbar" data-transitiongoal="">0%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/bootstrap-fileinput/js/fileinput.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-progressbar/bootstrap-progressbar.min.js" type="text/javascript"></script>
    <script src="~/Scripts/book-upload.min.js" type="text/javascript"></script>
}
